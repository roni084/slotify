<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EEDBDB" /> <!-- Darker color when pressed -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F4F6" /> <!-- Default background color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
