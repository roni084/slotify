<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/tv_dialog_terms_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions:"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tv_dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/terms_and_conditions"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dialog_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms:"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#1565C0"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tv_dialog_term_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/terms"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dialog_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conditions:"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#1565C0"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tv_dialog_tv_dialog_condition_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conditions"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <!-- Horizontal LinearLayout for CheckBoxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox_understand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I understand"
                android:textSize="14sp"
                android:paddingEnd="16dp" />

            <CheckBox
                android:id="@+id/checkbox_not_understand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I do not understand"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Submit"
            android:enabled="false"
            android:backgroundTint="#FFC803"
            android:textColor="#283593" />
    </LinearLayout>
</ScrollView>